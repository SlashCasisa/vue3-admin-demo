{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "/@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ],
      "target": "esnext",
      "module": "esnext",
      "strict": false,
      "jsx": "preserve",
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "src/types/images.d.ts",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }